{
	"build": {
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build",
		"devPath": "http://localhost:5173",
		"distDir": "../build",
		"withGlobalTauri": false
	},
	"package": {
		"productName": "jolt",
		"version": "0.4.4"
	},
	"tauri": {
		"allowlist": {
			"shell": {
				"open": true
			},
			"window": {
				"setTitle": true
			}
		},
		"bundle": {
			"category": "SocialNetworking",
			"active": true,
			"targets": "all",
			"identifier": "com.vloddot.jolt",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"appimage": {
				"bundleMediaFramework": true
			},
			"windows": {
				"allowDowngrades": true,
				"certificateThumbprint": null,
				"digestAlgorithm": null,
				"nsis": null,
				"timestampUrl": null,
				"tsp": false,
				"webviewInstallMode": {
					"type": "embedBootstrapper"
				},
				"wix": null
			}
		},
		"security": {
			"csp": null
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": true,
				"title": "Jolt",
				"width": 800,
				"height": 600
			}
		]
	}
}